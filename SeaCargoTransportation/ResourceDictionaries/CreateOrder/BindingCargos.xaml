<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary
			Source="/ResourceDictionaries/CreateOrder/CreatorOfSharedDataContext.xaml"
		></ResourceDictionary>
	</ResourceDictionary.MergedDictionaries>

	<Style x:Key="BindingCargos">
		<Setter 
			Property="ListBox.DataContext"
			Value="{DynamicResource DCCreateOrder}">
		</Setter>
		<Setter
			Property="ListBox.ItemsSource"
			Value="{Binding Cargos, Mode = TwoWay}"
		></Setter>
		<Setter
			Property="ListBox.ItemContainerStyle">
			<Setter.Value>
				<Style TargetType="{x:Type ListBoxItem}">
					<Setter
						Property="IsSelected"
						Value="{Binding IsSelected}"
					></Setter>
				</Style>
			</Setter.Value>
		</Setter>
		<Setter
			Property="ListBox.ItemTemplate">
			<Setter.Value>
				<DataTemplate>
					<StackPanel
						Orientation="Vertical"
					>
						<TextBlock
							Text="{Binding Number}"
						></TextBlock>
						<TextBlock
							Text="{Binding IsSelected}"
						></TextBlock>
					</StackPanel>
				</DataTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>