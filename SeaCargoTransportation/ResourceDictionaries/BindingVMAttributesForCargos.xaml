<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	                xmlns:ViewModels="clr-namespace:Layer0_Client.ViewModels">
	<ViewModels:VMAttributesForCargos x:Key="VMAttributesForCargos"></ViewModels:VMAttributesForCargos>

	<Style x:Key="BindingVMAttributesForCargos">
		<Setter 
				Property="ItemsControl.DataContext"
				Value="{DynamicResource VMAttributesForCargos}">
		</Setter>
		<Setter
				Property="ItemsControl.ItemsSource"
				Value="{Binding AttributesForCargos, Mode = TwoWay}"
			></Setter>
		<Setter
				Property="ItemsControl.ItemTemplate">
			<Setter.Value>
				<DataTemplate>
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="auto"></RowDefinition>
							<RowDefinition Height="auto"></RowDefinition>
						</Grid.RowDefinitions>

						<StackPanel
								Grid.Row="0"
								Orientation="Horizontal">

							<TextBlock
									Text="IdattributesForCargos:">
							</TextBlock>
							<TextBlock
									Text="{Binding IdattributesForCargos}"
								></TextBlock>
						</StackPanel>

						<StackPanel
								Grid.Row="1"
								Orientation="Horizontal">

							<TextBlock
									Text="Name:">
							</TextBlock>
							<TextBlock
									Text="{Binding Name}"
								></TextBlock>
						</StackPanel>
					</Grid>
				</DataTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>